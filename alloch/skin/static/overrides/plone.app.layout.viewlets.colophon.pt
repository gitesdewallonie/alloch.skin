<div id="portal-colophon"
     metal:define-macro="colophon"
     i18n:domain="plone">
<metal:slot define-slot="colophon" />
<div class="colophonWrapper"
     i18n:domain="alloch">
    <p id="site-description"
       i18n:translate="site_introduction">
        A la recherche d'une chambre d'hotes pour cette nuit ?
        Avec Allo chambre d'hotes, trouvez une chambre d'hotes
        disponible ce soir a proximite de votre destination
        en Wallonie.             
    </p>
    <div id="qrcode">
        <a class="qrcode-link" href=""
           title="Download mobile app"
           tal:attributes="href string:${context/portal_url}/download"
           i18n:attributes="title download_app">
           <div class="qrcode">
              <img src="++theme++alloch.skin/images/qrcode-mini.png"
                   width="93"
                   height="93"
                   alt="Scanner ce qrcode pour telecharger l'appli sur votre smartphone"
                   title="Scanner ce qrcode pour telecharger l'appli sur votre smartphone"
                   i18n:attributes="title scan_qrcode_to_download;
                                    alt scan_qrcode_to_download" />
           </div>
           <span i18n:translate="download_app">Download mobile app</span>
        </a>
    </div>
</div>
</div>
