<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      lang="en"
      i18n:domain="plone">

<metal:javascriptslot fill-slot="javascript_head_slot"> 
    <tal:script tal:content="structure view/getHebMap">
    </tal:script>
</metal:javascriptslot>

<body>

<div metal:fill-slot="main"
     i18n:domain="alloch"
     tal:define="heb view/getHebergement">

   <div id="header">
        <div id="header_map">
            <div id="map">
            </div>
        </div>
   </div>

    <script type="text/javascript">
        jQuery(document).ready(function() {
         // jq('a.heb-itinerary-link').prepOverlay({
         //     subtype: 'ajax',
         //     filter: '#content > *'
         //     });
          load();  // loads map
        });
    </script>

   <div class="itinerary" tal:condition="view/getSearchLocation">
       <a href="" title="Itinéraire" target="_blank"
          tal:attributes="href python: view.getHebItineraryURL(heb)"
          i18n:attributes="title itinerary_link">
          <span i18n:translate="itinerary_link">Itinéraire vers</span> <span tal:replace="heb/heb_nom" /></a>
   </div> 

    <a class="back-link" href="javascript:history.back()">&larr; Retour</a><br />

   <div tal:define="lang request/LANGUAGE | en">
    <h1 tal:content="heb/heb_nom">Heb name</h1>
    <span tal:replace="python: heb.type.getTitle(lang)" />
    <span tal:replace="structure python: view.getEpis(heb)" />
    &rarr;&nbsp;(<span tal:content="string:${heb/heb_cgt_cap_min}/${heb/heb_cgt_cap_max}" />)
    <br /><br />
    <span tal:replace="python: heb.getDescription(lang)" />
    <br /><br />
    <span tal:content="heb/heb_adresse" /><br />
    <span tal:content="heb/commune/com_cp" />
    <span tal:content="heb/heb_localite" />
    (<span tal:content="heb/commune/com_nom" />)
    <br /><br />
    Tarif : <span tal:content="heb/heb_tarif_chmbr_avec_dej_2p" /> &euro;

    <fieldset>
     <legend i18n:translate="rooms">Rooms / beds</legend>
     Nombre de chambres : <span tal:content="heb/heb_cgt_nbre_chmbre" />
     <div tal:condition="python: int(heb.heb_lit_1p) > 0">
        Lit 1 place : <span tal:content="heb/heb_lit_1p" />
     </div>
     <div tal:condition="python: int(heb.heb_lit_2p) > 0">
        Lit 2 places : <span tal:content="heb/heb_lit_2p" />
     </div>
     <div tal:condition="python: int(heb.heb_lit_sup) > 0">
        Lit supplémentaire : <span tal:content="heb/heb_lit_sup" />
     </div>
     <div tal:condition="python: int(heb.heb_lit_enf) > 0">
        Lit enfant : <span tal:content="heb/heb_lit_enf" />
     </div>
    </fieldset>

    <fieldset tal:condition="python: heb.heb_animal == 'oui' or heb.heb_fumeur == 'oui'">
     <legend i18n:translate="comfort">Comfort</legend>
     <div tal:condition="python: heb.heb_animal == 'oui'">
        Animaux de compagnie accept&eacute;s
     </div>
     <div tal:condition="python: heb.heb_fumeur == 'oui'">
        Autorisation de fumer
     </div>
    </fieldset>

    <fieldset>
      <legend i18n:translate="owner">Owner</legend>
      <table id="info-proprio">
         <tr>
            <td>
               <b tal:content="heb/proprio/civilite/civ_titre" />
               <b>
                  <span tal:replace="heb/proprio/pro_prenom1" />
                  <span tal:replace="heb/proprio/pro_prenom2" />
                  <span tal:replace="heb/proprio/pro_nom1"/>
                  <span tal:replace="heb/proprio/pro_nom2" />
               </b>
               <br />
               <span tal:replace="heb/proprio/pro_langue" /><br />
               <img src="" tal:attributes="src string:${portal_url}/++resource++telephone.gif" />
               <span tal:replace="heb/proprio/pro_tel_priv" /><br />
               <img src="" tal:attributes="src string:${portal_url}/++resource++fax.gif" />
               <span tal:replace="heb/proprio/pro_fax_priv" /><br />
               <img src="" tal:attributes="src string:${portal_url}/++resource++gsm.gif" />
               <span tal:replace="heb/proprio/pro_gsm1" /><br />
               <img src="" tal:attributes="src string:${portal_url}/++resource++email.gif" />
               <span tal:replace="heb/proprio/pro_email" /><br>
               <span tal:condition="python: heb.proprio.pro_url!=''">
                  <img src="" tal:attributes="src string:${portal_url}/++resource++lien.gif" />
                  <a href=""
                        tal:attributes="href string: http://${heb/proprio/pro_url}"
                        tal:content="string: http://${heb/proprio/pro_url}"
                        target="_blank" />
               </span>
            </td>
         </tr>
      </table><!--info proprio-->
    </fieldset>
    
    <fieldset>
      <legend i18n:translate="pictures">Pictures</legend>
      <div class="picture" tal:repeat="photo python: view.getPhotosURL(heb.heb_code_gdw)">
        <img src="" tal:attributes="src photo" />
      </div>
    </fieldset>

   </div>

</div>
</body>
</html>
