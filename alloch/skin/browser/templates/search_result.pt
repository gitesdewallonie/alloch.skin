<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      lang="en"
      i18n:domain="plone">

<metal:javascriptslot fill-slot="javascript_head_slot"> 
    <tal:script tal:content="structure view/getCompleteMap">
    </tal:script>
</metal:javascriptslot>

<body>

<div metal:fill-slot="main"
     i18n:domain="alloch">

    <div id="header">
        <div id="social-zone">
            <div id="facebook">
                <a href="#" title="Facebook"></a>
            </div>
            <div id="twitter">
                <a href="#" title="Twitter"></a>
            </div>
            <div id="google">
                <a href="#" title="Google+"></a>
            </div>
        </div><!--social-zone-->

        <div id="header_map">
            <div id="map">
            </div>
        </div>
    </div>

    <script type="text/javascript">
        jQuery(document).ready(function() {
        //   jq('a.heb-detail-link').prepOverlay({
        //      subtype: 'ajax',
        //      filter: '#content > *'
        //      });
          load();  // loads map
        });
    </script>

    <a class="back-link" href="javascript:history.back()">&larr; Retour</a><br />

    <h1 i18n:translate="search_results_title">RÃ©sultats de la recherche</h1>
    <p>&nbsp;</p>
    <div tal:define="hebs view/getSearchResults">
        <div tal:define="lang request/LANGUAGE | en"
             tal:condition="hebs">
            <div id="containeur-listing-chambre" 
                 tal:repeat="heb hebs">
                <tal:if tal:condition="not: heb/grouped">
                    <h2 class="nom-heb-listing">
                        <span tal:replace="repeat/heb/number" />.&nbsp;
                        <span tal:content="heb/heb_nom"
                              class="nom-chambre" />
                        <span class="arrow"></span>  
                    </h2>
                    <div class="photo-heb">
                        <a href=""
                           class="heb-detail-link"
                           title="Details of this accomodation"
                           tal:attributes="href string:${context/portal_url}/heb-detail?hebPk=${heb/heb_pk}"
                           i18n:attributes="title details_of_this_heb">
                            <img src=""
                                 border="0"
                                 tal:attributes="src string:${portal_url}/photos_heb/${heb/getVignette}" />
                        </a>
                        <br />
                        
                        
                    </div>
                    <div class="description-heb">
                        <p>
                        <span tal:content="string:${heb/heb_cgt_cap_min}/${heb/heb_cgt_cap_max}" /> pers.
                        <br />
                        Distance : <span tal:replace="heb/distance" /> km
                        </p>
                        <p>
                        <span tal:replace="python: heb.getDescription(lang)" />
                        </p>
                    </div>
                </tal:if>
                <tal:else tal:condition="heb/grouped">
                    <span tal:define="room1 python: heb.rooms[0]">
                        <h2 class="nom-heb-listing">
                            <span tal:replace="repeat/heb/number" />.&nbsp;
                            <span tal:content="room1/heb_nom"
                                  class="nom-chambre" />
                            <span class="arrow"></span>
                        </h2>
                        <div class="photo-heb">
                            <a href=""
                               class="heb-detail-link"
                               title="Details of this accomodation"
                               tal:attributes="href string:${context/portal_url}/heb-detail?hebPk=${heb/heb_pk}"
                               i18n:attributes="title details_of_this_heb">
                            </a>
                            <img src=""
                                 border="0"
                                 tal:attributes="src string:${portal_url}/photos_heb/${room1/getVignette}" />
                            <br />
                        </div>
                        <div class="description-heb">
                            <p>
                            <span tal:content="string:${room1/heb_cgt_cap_min}/${room1/heb_cgt_cap_max}" /> pers.
                            <br />
                            Distance : <span tal:replace="heb/distance" /> km
                            </p>
                            <p>
                            <span tal:replace="python: room1.getDescription(lang)"></span>
                            </p>
                            <div class="autre-chambre">
                                <a href=""
                                   title="Rooms of this accomodation"
                                   tal:attributes="href string:${context/portal_url}/rooms-list?group=${heb/heb_pro_fk}"
                                   i18n:attributes="title rooms_of_this_heb">
                                   &rarr; <span tal:content="python: len(heb.rooms)-1" /> other room(s)
                                </a>
                            </div>
                        </div>
                    </span>
                </tal:else>
                <div class="break-float"></div>
            </div>
        </div>
        <div tal:condition="not: hebs"
             i18n:translate="no_results">
            No results found.
        </div>
    </div>
</div>
</body>
</html>
